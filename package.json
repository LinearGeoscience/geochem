{
    "name": "geochem-dashboard",
    "private": true,
    "scripts": {
        "start": "concurrently --kill-others \"npm:backend\" \"npm:frontend\"",
        "dev": "concurrently --kill-others \"npm:backend\" \"npm:frontend\"",
        "backend": "cd backend && venv\\Scripts\\python -m uvicorn app.main:app --reload",
        "frontend": "cd frontend && npm run dev",
        "setup": "npm install && cd backend && python -m venv venv && venv\\Scripts\\pip install -r requirements.txt && cd ../frontend && npm install"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    }
}
